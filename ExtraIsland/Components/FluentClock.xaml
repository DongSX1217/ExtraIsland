<ci:ComponentBase x:Class="ExtraIsland.Components.FluentClock"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="clr-namespace:ExtraIsland.Components"
                  xmlns:ci="http://classisland.tech/schemas/xaml/core"
                  mc:Ignorable="d"
                  Loaded="FluentClock_OnLoaded">
    <Grid HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0"
               Content="HH"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               x:Name="LHours">
            <Label.RenderTransform>
                <TranslateTransform x:Name="HTt"/>
            </Label.RenderTransform>
        </Label>
        <Label Grid.Column="1"
               VerticalAlignment="Center"
               Padding="0">:</Label>
        <Label Grid.Column="2"
               Content="MM"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               x:Name="LMins">
            <Label.RenderTransform>
                <TranslateTransform x:Name="MTt"/>
            </Label.RenderTransform>
        </Label>
        <Label Grid.Column="3"
               VerticalAlignment="Center"
               Padding="0">:</Label>
        <Label Grid.Column="4"
               Content="SS"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               x:Name="LSecs"
               >
            <Label.RenderTransform>
                <TranslateTransform x:Name="STt"/>
            </Label.RenderTransform>
        </Label>
    </Grid>
</ci:ComponentBase>
